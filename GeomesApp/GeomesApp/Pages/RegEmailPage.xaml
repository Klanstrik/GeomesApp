<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeomesApp.Pages.RegEmailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     Spacing="40"
                     Padding="20,20,20,20"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Label Text="Укажи свой почтовый адрес"
                   FontSize="Medium"
                   TextColor="Black"/>
            <Label Text="Мы отправим письмо для подтверждения регистрации"
                   FontSize="Medium"
                   TextColor="DarkGray"/>
            <StackLayout Orientation="Vertical"
                         Spacing="80"
                         VerticalOptions="CenterAndExpand">
                <Entry x:Name="entryEmail"
                       Keyboard="Email"/>
                <Button x:Name="btnContinue"
                        Text="Продолжить"
                        HeightRequest="50"
                        WidthRequest="300"
                        TextColor="LimeGreen"
                        CornerRadius="10"
                        Clicked="btnContinue_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>