<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeomesApp.Pages.RegNamePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical"
                     Spacing="40"
                     Padding="20,20,20,20"
                     HorizontalOptions="CenterAndExpand"
                     VerticalOptions="CenterAndExpand">
            <Label Text="Тебя зовут..."
                   FontSize="Large"
                   TextColor="Black"/>
            <StackLayout Orientation="Vertical"
                         Spacing="80"
                         HorizontalOptions="CenterAndExpand"
                         VerticalOptions="CenterAndExpand">
                <Entry x:Name="entryName"
                       Keyboard="Chat"/>
                <Button x:Name="btnContinue"
                        Text="Продолжить"
                        FontSize="Large"
                        BackgroundColor="#28E4BC"
                        HeightRequest="50"
                        WidthRequest="300"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="btnContinue_Clicked"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>